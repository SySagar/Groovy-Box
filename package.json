{
  "name": "groovy-box",
  "version": "0.3.2",
  "private": true,
  "packageManager": "npm@9.8.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check:up-to-date-types": "tcm --listDifferent ./apps/ui/lib",
    "lint:ts": "tsc",
    "format": "prettier --write ./apps/ui/lib/**/* ./apps/ui/stories/**/* ./apps/docs/**/* && git add -A ."
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "latest",
    "typed-css-modules": "^0.9.1"
  }
}
